<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_space100dp"
        android:layout_margin="@dimen/_space8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_bg_item_house"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:alpha="0.3"
            app:shapeAppearanceOverlay="@style/rounded_shape_12"
            android:src="@drawable/klee"/>

        <RelativeLayout
            android:id="@+id/btn_item_house"
            android:layout_width="match_parent"
            android:background="@drawable/bg_item_lv2_faded_transparent_12"
            android:paddingVertical="@dimen/_space16dp"
            android:paddingHorizontal="@dimen/_space8dp"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_avt_house"
                android:layout_width="@dimen/_space48dp"
                android:layout_height="@dimen/_space48dp"
                app:shapeAppearanceOverlay="@style/circle_shape"
                android:layout_marginHorizontal="@dimen/_space8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_no_face"/>

            <TextView
                android:id="@+id/txt_name_house"
                style="@style/theme_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@id/img_avt_house"
                android:layout_alignTop="@id/img_avt_house"
                android:layout_toStartOf="@id/img_arrow_forward"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_16"
                tools:text="name house" />

            <LinearLayout
                android:id="@+id/btn_manage_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name_house"
                android:layout_alignStart="@id/txt_name_house"
                android:layout_marginTop="@dimen/_space8dp"
                android:background="@drawable/bg_gray_corner_4"
                android:orientation="horizontal"
                android:padding="@dimen/_space4dp">

                <TextView
                    android:id="@+id/txt_num_room"
                    style="@style/theme_hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_space8dp"
                    android:text="1 room"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="normal" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_space12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/txt_num_device"
                    style="@style/theme_hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_space8dp"
                    android:text="2 devices"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_arrow_forward"
                android:layout_width="@dimen/_space24dp"
                android:layout_height="@dimen/_space24dp"
                android:src="@drawable/ic_arrow_forward_24"
                android:alpha="0.3"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </FrameLayout>
</layout>