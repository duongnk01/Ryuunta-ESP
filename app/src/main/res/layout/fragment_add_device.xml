<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="currentSSIDPickup"
            type="ryuunta.iot.ryuuntaesp.data.model.WifiSSID" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_space36dp"
        android:background="?backgroundColor">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Danh sÃ¡ch SSID"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_list_ssid"
                        android:requiresFadingEdge="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_space200dp"
                        android:layout_marginTop="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text='@{String.format(@string/custom_text_current_ssid, currentSSIDPickup.ssid)}'
                        tools:text="@string/custom_text_current_ssid"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_input_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="pass"
                        android:text="10101010"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txt_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{String.format(@string/custom_text_current_ssid, currentSSIDPickup.ssid)}'
                        tools:text="@string/custom_text_current_ssid"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:textColor="@color/red_error"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/btn_authorize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_gray_item_ripple_12"
                        android:padding="16dp"
                        android:text="Authorize"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_space16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            style="@style/theme_header_text"
                            android:text="Example ESP"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_led"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/theme_title_text"
                            android:text="ESP LED"
                            app:switchPadding="8dp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_relay_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/theme_title_text"
                            android:layout_marginTop="24dp"
                            android:text="SWITCH 1"
                            app:switchPadding="8dp" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_relay_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/theme_title_text"
                            android:layout_marginTop="24dp"
                            android:text="SWITCH 2"
                            app:switchPadding="8dp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_relay_esp_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/theme_title_text"
                            android:layout_marginTop="24dp"
                            android:text="SWITCH ESP 01"
                            app:switchPadding="8dp" />

                        <TextView
                            android:id="@+id/txt_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/theme_title_text"
                            android:layout_marginTop="28dp"
                            android:text="Door Lock"/>

                        <Button
                            android:id="@+id/btn_lock_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Lock"
                            android:textAllCaps="true"
                            app:layout_constraintEnd_toStartOf="@id/btn_open_door"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_door" />

                        <Button
                            android:id="@+id/btn_open_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Open"
                            android:textAllCaps="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/btn_lock_door"
                            app:layout_constraintTop_toBottomOf="@+id/txt_door" />

                        <Button
                            android:id="@+id/button"
                            android:layout_marginTop="@dimen/_space24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="add new device" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>
    </FrameLayout>
</layout>