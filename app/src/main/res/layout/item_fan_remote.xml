<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_space8dp"
        android:padding="@dimen/_space12dp"
        android:background="@drawable/bg_gray_item_ripple_12"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_device_icon"
            android:layout_width="@dimen/_space64dp"
            android:layout_height="@dimen/_space64dp"
            android:layout_margin="@dimen/_space4dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_fan_remote" />

        <ImageView
            android:id="@+id/btn_quick_switch"
            android:layout_width="@dimen/_space24dp"
            android:layout_height="@dimen/_space24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_power_switch_on" />

        <TextView
            android:id="@+id/txt_device_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_space12dp"
            android:layout_below="@id/img_device_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/txt_fan_remote"
            style="@style/theme_content_text"/>
    </RelativeLayout>

</layout>