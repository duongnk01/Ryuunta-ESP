<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_item_ripple_12"
        android:paddingHorizontal="@dimen/_space8dp"
        android:paddingVertical="@dimen/_space12dp"
        android:layout_margin="@dimen/_space8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_space8dp"
            android:layout_marginVertical="@dimen/_space12dp"
            android:text="button 1"
            style="@style/theme_title_text"/>

        <ImageView
            android:id="@+id/img_power_state"
            android:layout_width="@dimen/_space32dp"
            android:layout_height="@dimen/_space32dp"
            android:src="@drawable/ic_power_switch_on"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_space24dp"/>
    </LinearLayout>


</layout>