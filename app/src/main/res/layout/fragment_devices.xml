<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_space16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_device_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/theme_header_text"
            android:gravity="center"
            android:paddingVertical="@dimen/_space4dp"
            android:drawableStart="@drawable/ic_arrow_back_24"
            android:layout_gravity="center_horizontal"
            android:text="Device"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_device_elements"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_space24dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:spanCount="2"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ryuunta.iot.ryuuntaesp.widget.DeviceButtonView
                android:id="@+id/layout_element_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</layout>