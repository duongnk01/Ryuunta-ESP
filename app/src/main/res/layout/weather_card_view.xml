<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="@dimen/_space160dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_weather_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        app:shapeAppearanceOverlay="@style/rounded_shape_12"
        android:scaleType="centerCrop"
        android:src="@drawable/img_wearther_cloudy" />

    <RelativeLayout
        android:id="@+id/layout_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        tools:visibility="visible"
        android:background="@drawable/bg_faded_transparent_12"
        android:padding="@dimen/_space8dp">

        <ImageView
            android:id="@+id/img_weather_state"
            android:layout_width="@dimen/_space64dp"
            android:layout_height="@dimen/_space64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_space16dp"
            android:layout_marginTop="@dimen/_space12dp"
            android:scaleType="fitXY"
            android:elevation="@dimen/_space4dp"
            app:srcCompat="@drawable/ic_weather_sun" />

        <TextView
            android:id="@+id/txt_temperature"
            style="@style/theme_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_weather_state"
            android:layout_marginStart="@dimen/_space16dp"
            android:layout_toEndOf="@id/img_weather_state"
            android:gravity="center"
            android:text="28°C"
            android:textSize="@dimen/text_size_32" />

        <TextView
            android:id="@+id/txt_weather_desc"
            style="@style/theme_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_weather_state"
            android:layout_below="@id/txt_temperature"
            android:layout_gravity="bottom"
            android:layout_alignStart="@id/txt_temperature"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textSize="@dimen/text_size_12" />


        <TextView
            android:id="@+id/txt_humidity"
            style="@style/theme_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_humidity_label"
            android:layout_alignStart="@id/txt_humidity_label"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="68%"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/txt_fine_dust"
            style="@style/theme_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_fine_dust_label"
            android:layout_alignStart="@id/txt_fine_dust_label"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tốt"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/txt_humidity_label"
            style="@style/theme_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/img_weather_state"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_space8dp"
            android:layout_marginBottom="@dimen/_space12dp"
            android:gravity="start"
            android:text="@string/label_humidity_outside"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/txt_fine_dust_label"
            style="@style/theme_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_humidity_label"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_space48dp"
            android:layout_toEndOf="@id/txt_humidity_label"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/label_fine_dust_outside"
            android:textSize="@dimen/text_size_10" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_space160dp"
        android:background="?backgroundItem"
        android:gravity="center"
        android:alpha="0.7"
        tools:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_space64dp"
            android:layout_height="@dimen/_space64dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/paimon_sleep" />

        <TextView
            android:id="@+id/textView"
            style="@style/theme_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10"
            android:layout_marginTop="@dimen/_space8dp"
            android:gravity="center"
            android:text="Không thể tải thông tin thời tiết" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_load_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="?backgroundItem"
        android:padding="@dimen/_space48dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim_arona_kururu"
        tools:visibility="gone" />

</FrameLayout>