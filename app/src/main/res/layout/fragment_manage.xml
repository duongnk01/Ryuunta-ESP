<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_header_green_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_space36dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/txt_label_manage"
                style="@style/theme_header_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_space36dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginVertical="@dimen/_space8dp"
                android:gravity="center"
                android:text="@string/txt_home_manage" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_space8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_new_name_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                style="@style/theme_text_input"
                android:hint="Enter new name"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnChangeNameHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="change name house" />

        <Button
            android:id="@+id/btn_creata_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create room" />

        <Button
            android:id="@+id/btn_change_name_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="change name room" />

        <Button
            android:id="@+id/btn_send_udp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send UDP" />

    </LinearLayout>

</layout>