<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/swiperRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_layout">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?backgroundHeaderColor">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="@color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_space100dp"
                        android:orientation="vertical"
                        app:layout_collapseMode="pin">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_space160dp"
                            android:layout_margin="@dimen/_space16dp"
                            app:cardBackgroundColor="@color/gray"
                            app:cardCornerRadius="@dimen/_space8dp"
                            app:cardElevation="@dimen/_space2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="weather" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            style="@style/theme_content_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?backgroundItem"
                            android:layout_marginHorizontal="@dimen/_space16dp"
                            android:paddingVertical="@dimen/_space8dp"
                            android:text="quick scenarios content"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_space16dp"
                            android:background="@drawable/color_header_gradient_faded"/>
                    </LinearLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_space8dp"
                app:layout_anchorGravity="bottom"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_space36dp"
                    android:layout_gravity="bottom"
                    android:layout_marginVertical="@dimen/_space8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_collapseMode="pin">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spin_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MySpinnerStyle"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9" />

                    <ImageView
                        android:layout_width="@dimen/_space24dp"
                        android:layout_height="@dimen/_space24dp"
                        android:layout_marginHorizontal="@dimen/_space8dp"
                        android:src="@drawable/ic_scenarios"
                        android:background="?colorRipple"
                        app:tint="?tintIcon" />
                </LinearLayout>


                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nested_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/theme_content_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_space8dp"
                            android:layout_marginTop="@dimen/_space8dp"
                            android:text="@string/content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_space100dp"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.yalantis.phoenix.PullToRefreshView>
</layout>