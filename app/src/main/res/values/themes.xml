<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RyuuntaESP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="Theme.RyuuntaESP" parent="Base.Theme.RyuuntaESP">
        <!-- Status bar color. -->
        <item name="android:autofilledHighlight" >@android:color/transparent
        </item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Optional: set to transparent if your app is drawing behind the status bar. -->
        <item name="android:statusBarColor">@color/bg_header_daylight</item>
        <!-- Optional: set the status bar light and content dark. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:enforceNavigationBarContrast" >false</item>
        <item name="android:enforceStatusBarContrast" >false</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">?textNormalColor</item>
        <item name="backgroundHeaderColor">@color/bg_header_daylight</item>
        <item name="backgroundColor">@color/bg_color_daylight</item>
        <item name="backgroundItem">@color/bg_item_daylight</item>
        <item name="backgroundItemRipple">@color/bg_item_ripple_daylight</item>
        <item name="textHeaderColor">@color/text_header_color_daylight</item>
        <item name="textNormalColor">@color/text_normal_color_daylight</item>
        <item name="textHintColor">@color/text_hint_color_daylight</item>
        <item name="tintIcon">@color/tint_icon_daylight</item>
        <item name="colorRipple">?android:selectableItemBackgroundBorderless</item>
        <item name="accentColor">@color/accent_color_daylight</item>
        <item name="backgroundItemLv2">@color/bg_item_daylight_lv2</item>
        <item name="tintColorMainIconInactive">@color/tint_icon_daylight_inactive</item>
        <item name="backgroundNavColor">@color/bg_nav_daylight</item>
        <item name="backgroundManageColor">@color/bg_pink_daylight_fade</item>
        <item name="backgroundNotiColor">@color/bg_green_daylight_fade</item>


    </style>

    <style name="Theme.RyuuntaESP.Dark" parent="Base.Theme.RyuuntaESP">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">?backgroundHeaderColor</item>
        <item name="android:textColorPrimary">?textNormalColor</item>
        <item name="backgroundHeaderColor">@color/bg_header_darkmode</item>
        <item name="backgroundColor">@color/bg_color_darkmode</item>
        <item name="backgroundItem">@color/bg_item_darkmode</item>
        <item name="backgroundItemRipple">@color/bg_item_ripple_darkmode</item>
        <item name="textHeaderColor">@color/text_header_color_darkmode</item>
        <item name="textNormalColor">@color/text_normal_color_darkmode</item>
        <item name="textHintColor">@color/text_hint_color_darkmode</item>
        <item name="tintIcon">@color/tint_icon_darkmode</item>
        <item name="colorRipple">?android:selectableItemBackgroundBorderless</item>
        <item name="accentColor">@color/accent_color_darkmode</item>
        <item name="backgroundItemLv2">@color/bg_item_darkmode_lv2</item>
        <item name="tintColorMainIconInactive">@color/tint_icon_darkmode_inactive</item>
        <item name="backgroundNavColor">@color/bg_nav_darkmode</item>
        <item name="backgroundManageColor">@color/bg_pink_darkmode_fade</item>
        <item name="backgroundNotiColor">@color/bg_green_darkmode_fade</item>
    </style>

    <style name="DialogTheme2" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="RyuuntaDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.RyuuntaESP">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#2196F3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="theme_header_text">
        <item name="android:textColor">?textHeaderColor</item>
        <item name="android:fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginHorizontal">@dimen/_space8dp</item>
    </style>

    <style name="theme_title_text">
        <item name="android:textColor">?textNormalColor</item>
        <item name="android:fontFamily">@font/sfprodisplay_semibold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_marginHorizontal">@dimen/_space8dp</item>
    </style>

    <style name="theme_content_text">
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?textNormalColor</item>
        <!--        <item name="android:layout_marginHorizontal">@dimen/_space8dp</item>-->
    </style>

    <style name="theme_hint_text">
        <item name="android:fontFamily">@font/sfprodisplay_light</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">?textHintColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="theme_input_text">
        <item name="android:fontFamily">@font/sfprodisplay_light</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?textNormalColor</item>
        <item name="android:textColorHint">?textHintColor</item>
        <item name="android:textCursorDrawable">?accentColor</item>
    </style>

    <style name="theme_button_confirm">
        <item name="android:fontFamily">@font/sfprodisplay_semibold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textStyle">italic</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/_space12dp</item>
        <item name="android:background">@drawable/bg_button_confirm</item>
    </style>

    <style name="theme_button_cancel">
        <item name="android:fontFamily">@font/sfprodisplay_semibold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textStyle">italic</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/_space12dp</item>
        <item name="android:background">@drawable/bg_button_cancel</item>
    </style>

    <style name="MyHeaderSpinnerStyle">
        <!--        <item name="android:background">@drawable/bg_spinner</item>-->
        <item name="android:background">@drawable/bg_item_selector_no_border</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:spinnerDropDownItemStyle">@style/MyHeaderSpinnerDropDownItem</item>
    </style>

    <style name="MyHeaderSpinnerDropDownItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_gray_item_ripple_12</item>
        <item name="android:textColor">?textHeaderColor</item>
    </style>

    <style name="MySpinnerStyle">
        <!--        <item name="android:background">@drawable/bg_spinner</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@drawable/bg_item_lv2_selector_corner_8</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropDownItem</item>
    </style>

    <style name="MySpinnerDropDownItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_item_lv2_selector_corner_8</item>
        <item name="android:textColor">?textNormalColor</item>
    </style>

    <style name="circle_shape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_shape_12">
        <item name="cornerSize">@dimen/_space12dp</item>
    </style>

    <style name="theme_text_input">
        <item name="android:textColor">?textNormalColor</item>
        <item name="android:background">@drawable/bg_button_corner_gray_24</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:paddingTop">@dimen/_space8dp</item>
        <item name="android:textColorHint">?textHintColor</item>
    </style>


</resources>